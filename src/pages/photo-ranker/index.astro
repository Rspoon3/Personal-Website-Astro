---
import AppHead from "../../components/AppHead.astro";
import Header from "../../components/Header.astro";
import HeroSection from "../../components/HeroSection.astro";
import IconGrid from "../../components/IconGrid.astro";
import LandingPageFooter from "../../components/LandingPageFooter.astro";

import heroImage from "../../images/photo-ranker/heroImage.png";
import appIcon from "../../images/photo-ranker/appIcon.png";
import downloadOnAppStoreBlack from "../../images/misc/download-on-app-store-black.svg";
import apps from "../../json/apps.json";

const photoRanker = apps.find((app) => app.title === "Photo Ranker");
const appLink = photoRanker.appId ? `https://apps.apple.com/us/app/id${photoRanker.appId}` : null;

const iconGridItems = [
  {
    icon: "bi:images",
    title: "Smart Comparisons",
    description: "Compare photos side-by-side and let our algorithm find your favorites.",
  },
  {
    icon: "bi:layout-split",
    title: "Flexible Layouts",
    description:
      "Choose horizontal, vertical, or overlay modes to compare your way.",
  },
  {
    icon: "bi:trophy-fill",
    title: "Final Rankings",
    description:
      "Get a complete ranking from best to worst based on your preferences.",
  },
];
---

<html lang="en">
  <AppHead title="Photo Ranker" appId={photoRanker.appId} />
  <body class="text-white" style="background-color: #1a1a1a;">
    <Header
      title={photoRanker.title}
      appIcon={appIcon}
      appLink={appLink}
    />
    <HeroSection
      heroImage={heroImage}
      appIcon={appIcon}
      title="Photo Ranker"
      tagline="Find your best photos faster."
      appLink={appLink}
      downloadButton={downloadOnAppStoreBlack}
    />
    <IconGrid items={iconGridItems} />
    <LandingPageFooter bgColor="#0a0a0a" />
  </body>
</html>
