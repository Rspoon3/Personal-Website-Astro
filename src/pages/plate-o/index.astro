---
import { Image } from "astro:assets";
import heroImage from "../../images/plate-o/your_adventures_await.png";
import appIcon from "../../images/plate-o/appIconLight.png";
import downloadOnAppStoreBlack from "../../images/misc/download-on-app-store-black.svg";
import apps from "../../json/apps.json";
import LandingPageFooter from "../../components/LandingPageFooter.astro";
import { Icon } from "astro-icon/components";

const plateO = apps.find((app) => app.title === "Plate-O");
---

<html lang="en">
  <head>
    <title>Plate-O</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="apple-itunes-app" content="app-id=6739163428" />
  </head>
  <body class="text-white" style="background-color: #0a0117;">
    <!-- Header -->
    <header
      class="py-6 lg:px-48 px-6 flex items-center justify-between"
      style="background-color: #2e2836;"
    >
      <!-- Left: App Icon and Title -->
      <div class="flex items-center">
        <Image
          src={appIcon}
          alt="App Icon"
          class="h-12 w-12 mr-4 rounded-[20%]"
        />
        <h1 class="text-2xl font-bold">Plate-O</h1>
      </div>

      <!-- Right: App Details Link -->
      <a
        href={plateO.getAppLink}
        class="text-lg text-purple-300 hover:text-purple-400"
      >
        App Details
      </a>
    </header>

    <!-- Main Section -->
    <section
      class="relative py-12 flex flex-col md:flex-row items-start gap-16"
    >
      <!-- Top Color -->
      <div
        class="absolute top-0 left-0 w-full h-1/2 bg-[#383242] rounded-b-[50px]"
      >
      </div>

      <!-- Bottom Color -->
      <div class="absolute bottom-0 left-0 w-full h-1/2 bg-[#0a0117]"></div>

      <!-- Content -->
      <div
        class="relative z-10 flex flex-col-reverse md:flex-row items-start gap-16 px-48"
      >
        <!-- Left: Image -->
        <div class="flex-shrink-0">
          <Image
            src={heroImage}
            alt="New Streak Feature"
            class="h-auto w-[400px] object-contain"
          />
        </div>

        <!-- Right: Text and Download Button -->
        <div class="text-center md:text-left flex flex-col mt-16">
          <div class="flex flex-col md:flex-row items-center mb-4">
            <Image
              src={appIcon}
              alt="App Icon"
              class="h-24 w-auto mr-4 rounded-[20%]"
            />
            <h1 class="text-2xl font-bold">Plate-O</h1>
          </div>
          <h2 class="text-2xl mb-4 py-6">The license plate game</h2>
          <a href={plateO.getAppLink}>
            <Image
              src={downloadOnAppStoreBlack}
              alt="Download on App Store"
              class="h-16 w-auto mx-auto md:mx-0"
            />
          </a>
        </div>
      </div>
    </section>

    <!-- Icon Grid Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-16 px-48 mx-2 my-12">
      <!-- Column 1 -->
      <div class="flex items-start gap-4">
        <Icon name="bi:map-fill" class="text-3xl text-white flex-shrink-0" />
        <div>
          <h3 class="text-xl font-bold text-white">Explore the Map!</h3>
          <p class="text-gray-500">
            Track your license plate collection across the country, one state at
            a time.
          </p>
        </div>
      </div>

      <!-- Column 2 -->
      <div class="flex items-start gap-4">
        <Icon
          name="bi:compass-fill"
          class="text-3xl text-white flex-shrink-0"
        />
        <div>
          <h3 class="text-xl font-bold text-white">Challenge Yourself!</h3>
          <p class="text-gray-500">
            Create trips, spot plates, and see how many you can collect in one
            journey.
          </p>
        </div>
      </div>

      <!-- Column 3 -->
      <div class="flex items-start gap-4">
        <Icon name="bi:people-fill" class="text-3xl text-white flex-shrink-0" />
        <div>
          <h3 class="text-xl font-bold text-white">Share the Fun!</h3>
          <p class="text-gray-500">
            Show off your collection, share trips, and compete with friends to
            complete the map!
          </p>
        </div>
      </div>
    </div>

    <LandingPageFooter bgColor="0a0117" />
  </body>
</html>
