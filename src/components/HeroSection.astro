---
import { Image } from "astro:assets";

const { heroImage, appIcon, title, tagline, appLink, downloadButton } =
  Astro.props;
---

<section class="relative py-12 flex flex-col md:flex-row items-start gap-16">
  <!-- Top Color -->
  <div class="absolute top-0 left-0 w-full h-1/2 bg-[#383242] rounded-b-[50px]">
  </div>

  <!-- Bottom Color -->
  <div class="absolute bottom-0 left-0 w-full h-1/2 bg-[#0a0117]"></div>

  <!-- Content -->
  <div
    class="relative z-10 flex flex-col-reverse md:flex-row items-start gap-16 mx-auto my-12 max-w-6xl"
  >
    <!-- Left: Image -->
    <div class="flex-shrink-0">
      <Image
        src={heroImage}
        alt={title}
        class="h-auto w-[400px] object-contain"
      />
    </div>

    <!-- Right: Text and Download Button -->
    <div class="text-center md:text-left flex flex-col mt-16 mx-auto">
      <div
        class="flex flex-col md:flex-row items-center mb-4 space-y-6 md:space-y-0 md:space-x-4"
      >
        <!-- Icon and Title -->
        <Image src={appIcon} alt="App Icon" class="h-24 w-auto rounded-[20%]" />
        <h1 class="text-2xl font-bold">{title}</h1>
      </div>
      <h2 class="text-2xl mb-4 py-6">{tagline}</h2>
      <a href={appLink}>
        <Image
          src={downloadButton}
          alt="Download on App Store"
          class="h-16 w-auto mx-auto md:mx-0"
        />
      </a>
    </div>
  </div>
</section>
